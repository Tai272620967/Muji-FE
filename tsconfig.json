{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    // "baseUrl": "./",
    // "paths": {
    //   "@/base/*": ["*"],
    //   "@/components/*": ["components/*"],
    //   "@/types/*": ["types/*"],
    // }
    "baseUrl": "src/app", // Đặt baseUrl thành thư mục src
    "paths": {
      "@/base/*": ["*"],
      "@/components/*": ["components/*"], // Đường dẫn đến thư mục components
      "@/types/*": ["types/*"],
      "@/styles/*": ["styles/*"],
      "@/utils/*": ["utils/*"],
      // "@/assets/*": ["assets/*"]
    },
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}